#include <bits/stdc++.h>
using namespace std;

int board[3], mx[100001][3], mn[100001][3];

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;

    for (int i = 1; i <= n; i++)
    {
        cin >> board[0] >> board[1] >> board[2];
        mx[i][0] = max(mx[i - 1][0], mx[i - 1][1]) + board[0];
        mx[i][1] = max(mx[i - 1][0], max(mx[i - 1][1], mx[i - 1][2])) + board[1];
        mx[i][2] = max(mx[i - 1][2], mx[i - 1][1]) + board[2];

        mn[i][0] = min(mn[i - 1][0], mn[i - 1][1]) + board[0];
        mn[i][1] = min(mn[i - 1][0], min(mn[i - 1][1], mn[i - 1][2])) + board[1];
        mn[i][2] = min(mn[i - 1][2], mn[i - 1][1]) + board[2];
    }

    cout << max(mx[n][0], max(mx[n][1], mx[n][2]))
         << ' '
         << min(mn[n][0], min(mn[n][1], mn[n][2]));
    return 0;
}
